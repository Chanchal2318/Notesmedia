<style>
  /* Custom styles for the cards */
  .hover-card {
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .hover-card:hover {
    transform: scale(1.05); /* Scale effect on hover */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow effect on hover */
  }

  /* Ensuring all cards are of the same size */
  .card {
    height: 100%; /* Ensure the card stretches to full height */
  }

  .card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card img {
    height: 180px; /* Set uniform height for all images */
    width: 100%; /* Make images fit the full width of the card */
    object-fit: contain; /* Maintain the aspect ratio, and fit the image inside */
  }

  .card-title {
    text-align: center;
  }

  /* Container padding for better visual spacing */
  .container {
    padding-top: 20px;
    padding-bottom: 20px;
  }
</style>

